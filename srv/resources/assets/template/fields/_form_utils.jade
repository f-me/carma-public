mixin checkboxField(name)
  .checkbox
    label
      input(type="checkbox"
            data-bind="attr: { name: #{name} }, \
                       checked: #{name},        \
                       valueUpdate: 'change',   \
                       disabled: #{name}.disabled")&attributes(attributes)
      +labelWithInfo(name)

mixin checkboxTpl(name)
  .form-group
    .col-sm-4
    label.col-sm-8.control-label(style="text-align: left")
      +checkboxField(name)

